#!/bin/bash
for i in `ls /var/www/downloads/addons`; do 
    /usr/local/bin/catxml-new.py -p "/var/www/downloads/addons/${i}" -d "/var/www/downloads/addons/${i}/addons.xml" >/dev/null 2>&1;
done


